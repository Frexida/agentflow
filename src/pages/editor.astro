    // --- Override createCurvature for orthogonal (step) routing ---
    // Ports are top (input) / bottom (output), so lines go vertically.
    editor.createCurvature = function(startX, startY, endX, endY, curvature, type) {
      // Orthogonal step path: output (bottom) ‚Üí down ‚Üí horizontal ‚Üí down ‚Üí input (top)
      // Handle all directions: when target is above source, route around
      const gap = 40; // minimum vertical gap before turning horizontal
      if (endY > startY + gap) {
        // Normal case: target is below source
        const midY = (startY + endY) / 2;
        return ` M ${startX} ${startY} L ${startX} ${midY} L ${endX} ${midY} L ${endX} ${endY}`;
      } else {
        // Target is above or at same level: route around
        const offsetY = Math.max(startY + gap, endY + gap);
        const offsetX = (startX < endX ? -1 : 1) * 80;
        return ` M ${startX} ${startY} L ${startX} ${offsetY} L ${startX + offsetX} ${offsetY} L ${startX + offsetX} ${endY - gap} L ${endX} ${endY - gap} L ${endX} ${endY}`;
      }
    };

