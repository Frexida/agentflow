    // --- Session ‚Üí Agent mapping & status updates ---
    function clearAllAgentStatus() {
      document.querySelectorAll('.agent-status').forEach(el => {
        el.className = 'agent-status';
        el.title = 'Not connected';
      });
    }

    function matchSessionToAgent(session) {
      // Match by agent ID or name
      for (const agent of org.agents) {
        const sid = session.sessionKey || session.key || '';
        const sAgent = session.agentId || '';
        if (sAgent && (sAgent === agent.id || agent.name.toLowerCase().includes(sAgent.toLowerCase()))) return agent;
        if (sid.includes(agent.id)) return agent;
        // Try matching by name in session label
        const label = session.label || session.name || '';
        if (label && agent.name && label.toLowerCase().includes(agent.name.toLowerCase())) return agent;
      }
      return null;
    }

    gw.addEventListener('sessions-updated', (e) => {
      const sessions = e.detail || [];
      clearAllAgentStatus();

      for (const session of sessions) {
        const agent = matchSessionToAgent(session);
        if (!agent) continue;

        const statusEl = document.getElementById(`status-${agent.id}`);
        if (!statusEl) continue;

        const isActive = session.active || session.status === 'active' || session.lastActivity;
        const isBusy = session.busy || session.status === 'busy' || session.running;

        if (isBusy) {
          statusEl.className = 'agent-status busy';
          statusEl.title = 'Busy (processing)';
        } else if (isActive) {
          statusEl.className = 'agent-status active';
          statusEl.title = 'Active';
        } else {
          statusEl.className = 'agent-status idle';
          statusEl.title = 'Idle';
        }
      }
    });

    // --- Chat history panel (click agent while connected) ---
    let chatAgentId = null;

    function openChatPanel(agentId) {
      if (!gw.connected) return;
      chatAgentId = agentId;
      const agent = agentById(agentId);
      document.getElementById('chat-agent-name').textContent = agent ? `üí¨ ${agent.name}` : 'Agent Chat';
      chatPanel.classList.add('open');
      loadChatHistory(agentId);
    }

    function closeChatPanel() {
      chatPanel.classList.remove('open');
      chatAgentId = null;
    }

    document.getElementById('chat-panel-close').addEventListener('click', closeChatPanel);

    async function loadChatHistory(agentId) {
      chatMessages.innerHTML = '<div style="text-align:center;color:#555;padding:20px">Loading...</div>';
      try {
        // Try common session key patterns
        const keys = [`${agentId}:main`, agentId, `${agentId}:discord`];
        let history = null;
        for (const key of keys) {
          try {
            history = await gw.getChatHistory(key, 30);
            if (history) break;
          } catch { continue; }
        }

        if (!history || !history.messages || history.messages.length === 0) {
          chatMessages.innerHTML = '<div style="text-align:center;color:#555;padding:20px">No messages found</div>';
          return;
        }

        chatMessages.innerHTML = '';
        for (const msg of history.messages) {
          const role = msg.role || 'system';
          const content = typeof msg.content === 'string' ? msg.content : (msg.content?.[0]?.text || JSON.stringify(msg.content));
          const div = document.createElement('div');
          div.className = `chat-msg ${role}`;
          const truncated = content.length > 300 ? content.slice(0, 300) + '‚Ä¶' : content;
          div.innerHTML = `<div class="msg-meta">${role}</div>${escapeHtml(truncated)}`;
          chatMessages.appendChild(div);
        }
        chatMessages.scrollTop = chatMessages.scrollHeight;
      } catch (e) {
        chatMessages.innerHTML = `<div style="text-align:center;color:#ef4444;padding:20px">Error: ${e.message}</div>`;
      }
    }

    function escapeHtml(str) {
      return str.replace(/&/g,'&amp;').replace(/</g,'&lt;').replace(/>/g,'&gt;');
    }

    // Override agent card click when gateway is connected
    container.addEventListener('click', (e) => {
      if (!gw.connected) return;
      const card = e.target.closest('.agent-card');
      if (!card) return;
      const agentId = card.dataset.agentId;
      if (agentId && !e.detail >= 2) { // single click only
        openChatPanel(agentId);
      }
    });

  })();
