FROM node:22-slim

# Install git and bash (required by openclaw npm deps and entrypoint.sh)
RUN apt-get update && apt-get install -y git bash build-essential python3 libopus-dev && rm -rf /var/lib/apt/lists/*

# Install OpenClaw
RUN npm install -g openclaw

# Create workspace
RUN mkdir -p /root/.openclaw/workspace

# Gateway config will be injected via environment variables
# OPENCLAW_TOKEN, ANTHROPIC_API_KEY, OPENAI_API_KEY

# Startup script
COPY entrypoint.sh /entrypoint.sh
RUN chmod +x /entrypoint.sh

EXPOSE 18789

ENTRYPOINT ["/entrypoint.sh"]
# trigger deploy
